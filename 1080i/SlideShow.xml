<window id="2007">
    <defaultcontrol>2</defaultcontrol>
    <backgroundcolor>0</backgroundcolor>
    <controls>
        <control type="image">
            <description>Back Panel</description>
            <posy>780</posy>
            <height>300</height>
            <include>FullscreenDimensions</include>
            <texture background="true">views/thumb/panels/back-vignette-cropped.png</texture>
            <aspectratio>stretch</aspectratio>
            <include>Animation_FanartFade</include>
            <visible>!Skin.HasSetting(OSDMusicAlt.Enabled)</visible>
        </control>
        <control type="group">
            <posx>1683</posx>
            <posy>0</posy>
            <visible>Slideshow.IsPaused</visible>
            <animation type="Visible">
                <effect type="fade" start="0" end="100" time="300" tween="sine" easing="inout" />
                <effect type="slide" start="50" end="0" time="300" tween="sine" easing="inout" />
            </animation>
            <animation type="Hidden">
                <effect type="fade" start="100" end="0" time="200" tween="sine" easing="inout" />
                <effect type="slide" start="0" end="50" time="200" tween="sine" easing="inout" />
            </animation>
            <control type="image">
                <posx>0</posx>
                <posy>0</posy>
                <width>194</width>
                <height>194</height>
                <texture>overlays/volume/mute-back.png</texture>
                <aspectratio>stretch</aspectratio>
            </control>
            <control type="image">
                <description>Paused image</description>
                <posx>47</posx>
                <posy>47</posy>
                <width>100</width>
                <height>100</height>
                <texture>osd/nowplaying/np-paused.png</texture>
            </control>
        </control>
        <include>FadeBackground</include>
        <include condition="!Skin.HasSetting(OSDMusicAlt.Enabled)">Common-Info-NoOptions</include>
    </controls>
</window>
